# MongoDB connection string - replace with your own from MongoDB Atlas
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# Environment (development for local, production for Vercel)
NODE_ENV=development

# Port for backend server (used in local development)
PORT=3000

# Port for Vite dev server (used in local development)
VITE_PORT=5173

# API URL prefix (used in both local and production)
VITE_API_URL=/api 